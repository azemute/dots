filetype off
set rtp+=~/.vim/bundle/Vundle.vim

call vundle#begin()
Plugin 'VundleVim/Vundle.vim'
Plugin 'bling/vim-airline'
Bundle 'tpope/vim-fugitive'
Bundle 'tpope/vim-git'
Bundle 'sheerun/vim-polyglot'

call vundle#end()            " required
filetype plugin indent on

set nocompatible
set tabstop=4
set shiftwidth=4
set expandtab
set smarttab
set showcmd
set showmatch
set hlsearch
set incsearch
set ignorecase
set smartcase
set backspace=2
set autoindent
set formatoptions=c,q,r,t
set ruler
set background=dark

filetype plugin indent on
syntax on
colorscheme desert

